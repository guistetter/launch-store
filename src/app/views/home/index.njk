  <div class="items">
    {%for product in products%}
      <div class="product">
        <div class="image"
         style="background: url({{product.img}})"
         >  
         {% if product.oldPrice != product.price %}
          <div class="old-price">{{product.oldPrice}}</div>
         {% endif %}
